<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Wazoolylogo"
        android:layout_width="384dp"
        android:layout_height="259dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="409dp"

        android:contentDescription="@string/Wazoolylogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wazoolylogopic" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:text="@string/Username"
        android:textAlignment="center"

        android:textColor="#868686"
        app:layout_constraintBottom_toTopOf="@+id/passwordEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Wazoolylogo"
        app:layout_constraintVertical_bias="0.578" />

    <EditText
        android:id="@+id/passwordEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="204dp"


        android:autofillHints=""
        android:backgroundTint="#8F8D8D"
        android:cursorVisible="false"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"


        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Wazoolylogo" />

    <Button
        android:id="@+id/loginbutton"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="167dp"
        android:layout_marginBottom="122dp"
        android:fontFamily="casual"
        android:text="@string/Login"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEntry" />
</androidx.constraintlayout.widget.ConstraintLayout>


